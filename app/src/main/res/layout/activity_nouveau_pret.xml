<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/large_margin12"
    android:layout_marginRight="@dimen/large_margin12"
    android:layout_marginTop="@dimen/large_margin12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eleves.android_comptoir_grasset.NouveauPret">

    <!-- Main  container -->

<LinearLayout
    android:orientation="vertical"
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayoutTop">

    <TextView
        android:text="NOUVEAU PRÊT"
        android:textSize="@dimen/tx_size20"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin15"
    android:text="NOM" />

    <EditText
    android:id="@+id/nom_etudiant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"

    android:inputType="textPersonName" />

    <TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin15"
    android:text="COURRIEL" />

    <EditText
        android:id="@+id/courriel_etudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColorHint="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin15"
        android:text="TITRE DU COURS" />

    <AutoCompleteTextView
        android:id="@+id/titre_cours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ems="10"

        android:inputType="textPersonName" />

      <!--Layout proffesseur -->
                      <LinearLayout
                          android:layout_marginTop="@dimen/margin15"
                          android:orientation="horizontal"
                          android:weightSum="4"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="PROFESSEUR" />

                          <Spinner
                              android:id="@+id/spin_professeur"
                              android:layout_marginLeft="@dimen/margin5"
                              android:layout_weight="1"
                              android:layout_width="@dimen/small_button_width"
                              android:layout_height="40dp"
                              android:background="@android:drawable/btn_dropdown"
                             ></Spinner>

                      </LinearLayout>

                    <!--Layout Date picker -->
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin15"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.54"
                            android:text="DATE DE L'EMPRUNT" />

                        <EditText
                            android:id="@+id/date_editTx"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorAccent"
                            android:ems="10"
                            android:inputType="date" />

                        <ImageView
                            android:id="@+id/img_date_picker"
                            android:layout_weight="1.48"
                            android:src="@drawable/ic_date_range_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/margin10"
        android:text="COMMENTAIRE" />


    <EditText
        android:id="@+id/comment_editTx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorAccent"
        android:ems="10"
        android:inputType="textLongMessage" />
//


                                                    <!--Layout button-->



                                                        <LinearLayout
                                                            android:orientation="horizontal"
                                                            android:layout_width="wrap_content"
                                                            android:layout_marginTop="@dimen/margin10"
                                                            android:weightSum="2"
                                                            android:layout_gravity="center_horizontal"
                                                            android:layout_height="wrap_content">


                                                            <Button
                                                                android:id="@+id/btn_annuler"
                                                                android:layout_width="@dimen/small_button_width"
                                                                android:layout_height="@dimen/small_button_height"
                                                                android:background="@drawable/button_bg_rounded_corners"
                                                                 android:layout_marginRight="@dimen/margin35"
                                                                android:text="Annuler"
                                                                android:layout_weight="1"

                                                                 />


                                                            <Button

                                                                android:id="@+id/btn_choix_materiel"
                                                                android:layout_width="@dimen/small_button_width"
                                                                android:layout_height="@dimen/small_button_height"
                                                                android:layout_weight="1"
                                                                android:background="@drawable/button_bg_rounded_corners"
                                                                android:text="Choisir materiel"

                                                                />


                                                        </LinearLayout>





</LinearLayout>


